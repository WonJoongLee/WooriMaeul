<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/floralwhite">


    <LinearLayout
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/round_rectangle"
        android:focusable="true"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="30sp" />

    </LinearLayout>


    <EditText
        android:id="@+id/login_email"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textColorHint="#585c61"
        app:layout_constraintBottom_toTopOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColorHint="#585c61"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_email" />

    <LinearLayout
        android:id="@+id/login_button"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:layout_marginTop="320dp"
        android:clickable="true"
        android:focusable="true"

        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_board_custom"
            android:backgroundTint="@android:color/holo_blue_light"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/upper_bar"
        android:layout_width="415dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:foreground="@drawable/selectable_background"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="로그인 및 설정"
            android:textColor="@color/white"
            android:textSize="30sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_up"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginTop="388dp"
        android:background="@drawable/main_board_custom"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginTop="464dp"
        android:background="@drawable/main_board_custom"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_topLinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/wooriicon" />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jalnan"
            android:text="Woori Town"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="40sp" />

        <!--"Woori Town"글자와 회원이미지 클릭 사이에 들어갈 공백-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/setting_to_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/floralwhite"
            android:foreground="@drawable/selectable_background"
            android:scaleType="centerCrop"
            android:src="@drawable/pictogram_user" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>