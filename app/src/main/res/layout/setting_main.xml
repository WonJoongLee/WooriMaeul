<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/round_rectangle"
        android:focusable="true"
        android:foreground="@drawable/round_rectangle"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/login_button"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:layout_marginTop="320dp"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/round_rectangle"

        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/upper_bar"
        android:layout_width="415dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"

        android:foreground="@drawable/selectable_background"

        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="로그인 및 설정"

            android:textColor="@color/white"
            android:textSize="30sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign-up"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginTop="428dp"
        android:background="@drawable/main_board_custom"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/main_board_custom"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_topLinear">

        <TextView
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_topLinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/wooriicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jalnan"
            android:text="Woori Town"
            android:textColor="@color/darkgreen"
            android:textSize="40sp" />

        <!--"Woori Town"글자와 회원이미지 클릭 사이에 들어갈 공백-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/floralwhite"
            android:foreground="@drawable/selectable_background"
            android:scaleType="centerCrop"
            android:src="@drawable/pictogram_user" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_menu"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="626dp" />
</androidx.constraintlayout.widget.ConstraintLayout>